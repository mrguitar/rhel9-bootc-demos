kind: Namespace
apiVersion: v1
metadata:
  name: storage-example
---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: sample-pvc
  namespace: storage-example
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: sample
  namespace: storage-example
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      volumes:
        - name: storage
          persistentVolumeClaim:
            claimName: sample-pvc
      containers:
        - name: nginx
          image: nginxinc/nginx-unprivileged
          imagePullPolicy: IfNotPresent
          securityContext:
            allowPrivilegeEscalation: false
            runAsNonRoot: true
            capabilities:
              drop:
                - ALL
            seccompProfile:
              type: RuntimeDefault
          ports:
            - containerPort: 8080
              name: "http"
            - containerPort: 8443
              name: "https"
          volumeMounts:
            - mountPath: "/usr/share/nginx/html/storage"
              name: storage
---
kind: Service
apiVersion: v1
metadata:
  name: nginx
  namespace: storage-example
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      name: http
      port: 8080
    - protocol: TCP
      name: https
      port: 8443
---
kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: nginx
  namespace: storage-example
spec:
  port:
    targetPort: http
  to:
    kind: Service
    name: nginx
    weight: 100
  wildcardPolicy: None
